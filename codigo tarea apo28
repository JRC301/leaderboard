	// metodos
	public static void main(String[] args) {

		pedirNombreJuego();

	}

	public static void pedirNombreJuego() {
		// se crea el objeto para leer por consola:
		Scanner lectorConsola = new Scanner(System.in);
		System.out.print("Ingrese el nombre del videojuego: ");
		nombreVideojuego = lectorConsola.next();

	}

//LEER PUNTAJES Y NOMBRES DE JUGADORES
	public static void leerdatos() {
		
        Scanner lectorConsola = new Scanner(System.in);
        
		// recorrer el arreglo:
		
		for (int i = 0; i < NUM_JUGADORES; i++) {
			System.out.print("Ingrese el nombre del jugador: ");
			// leer cada nombre
			nombresJugadores[i] = lectorConsola.next();
		}
	}

